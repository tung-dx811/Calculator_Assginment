<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <TextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="50dp"
            android:layout_centerVertical="true"
            android:gravity="right"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/EC"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="EC"
            android:textSize="20dp"
            android:layout_weight="1"
            android:onClick="ButtonClick"
            />
        <Button
            android:id="@+id/C"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="C"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:layout_weight="1"
            android:onClick="ButtonClick"
            />
        <Button
            android:id="@+id/BS"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="BS"
            android:textSize="20dp"
            android:layout_weight="1"
            android:onClick="ButtonClick"
            />
        <Button
            android:id="@+id/div"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="/"
            android:textSize="20dp"
            android:layout_weight="1"
            android:onClick="ButtonClick"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/so7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="7"
            android:textSize="20dp"
            android:layout_weight="1"
            android:onClick="ButtonClick"
            />
        <Button
            android:id="@+id/so8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="8"
            android:textSize="20dp"
            android:layout_weight="1"
            android:onClick="ButtonClick"
            />
        <Button
            android:id="@+id/so9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="9"
            android:textSize="20dp"
            android:layout_weight="1"
            android:onClick="ButtonClick"
            />
        <Button
            android:id="@+id/mul"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="x"
            android:textSize="25dp"
            android:layout_weight="1"
            android:onClick="ButtonClick"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/so4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="4"
            android:textSize="20dp"
            android:layout_weight="1"
            android:onClick="ButtonClick"
            />
        <Button
            android:id="@+id/so5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="5"
            android:textSize="20dp"
            android:layout_weight="1"
            android:onClick="ButtonClick"
            />
        <Button
            android:id="@+id/so6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="6"
            android:textSize="25dp"
            android:layout_weight="1"
            android:onClick="ButtonClick"
            />
        <Button
            android:id="@+id/sub"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="-"
            android:textSize="25dp"
            android:layout_weight="1"
            android:onClick="ButtonClick"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/so1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="1"
            android:textSize="20dp"
            android:layout_weight="1"
            android:onClick="ButtonClick"
            />
        <Button
            android:id="@+id/so2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="2"
            android:textSize="20dp"
            android:layout_weight="1"
            android:onClick="ButtonClick"
            />
        <Button
            android:id="@+id/so3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="3"
            android:textSize="20dp"
            android:layout_weight="1"
            android:onClick="ButtonClick"
            />
        <Button
            android:id="@+id/sum"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="+"
            android:textSize="25dp"
            android:layout_weight="1"
            android:onClick="ButtonClick"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="+/-"
            android:textSize="20dp"
            android:layout_weight="1"
            android:onClick="ButtonClick"
            />
        <Button
            android:id="@+id/so0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="0"
            android:textSize="20dp"
            android:layout_weight="1"
            android:onClick="ButtonClick"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="."
            android:textSize="30dp"
            android:layout_weight="1"
            android:onClick="ButtonClick"
            />
        <Button
            android:id="@+id/equal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="="
            android:textSize="25dp"
            android:layout_weight="1"
            android:onClick="ButtonClick"
            />

    </LinearLayout>
</LinearLayout>